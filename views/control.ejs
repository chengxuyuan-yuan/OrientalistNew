<script>
    var socket = io();
    var localStorage = window.localStorage
    const vm = new Vue({
        el: '#app',
        data: {
            listDate: [],
            userName: window.localStorage.userName,
            AmountAll: '',
            gupiaoItem: ''
        },
        methods: {
            setAmount() {
                var that = this
                console.log('1232131231', that.AmountAll, that.gupiaoItem)
                this.$http.post('http://localhost:3001/amount', {
                    AmountAll: that.AmountAll,
                    gupiaoItem: that.gupiaoItem
                }).then(data => {
                    console.log(data.data)
                    UIkit.notify({
                        message: data.data.data,
                        status: 'warning',
                        timeout: 2000,
                        pos: 'top-right'
                    });
                })
            },
            getAmount() {
                var that = this
                this.$http.post('http://localhost:3001/seachAmount', {}).then(data => {
                    console.log('data', data.data)
                    that.AmountAll = data.data.AmountAll
                    that.gupiaoItem = data.data.gupiaoItem
                })
            },
            start() {
                this.$http.post('http://localhost:3001/start', {

                }).then(data => {
                    // console.log(data.data) 
                    if (data.data.status == 1) {
                        this.listDate = data.data.data
                    } else {
                        UIkit.notify({
                            message: data.data.data,
                            status: 'warning',
                            timeout: 2000,
                            pos: 'top-right'
                        });
                    }
                })
            },
            stop() {
                socket.emit("getls", {
                    "wyz": 'wabgbs',
                });

                // this.$http.post('http://localhost:3001/stop', {

                // }).then(data => {
                //     console.log(data.data.body)
                //     this.AmountAll = data.data.body.AmountAll
                //     this.gupiaoItem = data.data.body.gupiaoItem
                // })
            }
        },
        created() {
            if (!window.localStorage.userName) {
                window.location.href = '/login'
            }
            this.getAmount()
                // this.getHistory()
        }
    })
    socket.on("getls", function(msg) {
        console.log(msg.datas.data)
        vm.listDate = msg.datas.data
    });
</script>

